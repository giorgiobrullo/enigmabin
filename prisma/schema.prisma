generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Paste {
  id         String    @id
  encrypted  Json?
  burnToken  String?
  burnKey    String?   // Public key for verified burn-on-read (base64)
  expiresAt  DateTime?
  createdAt  DateTime  @default(now())

  @@index([expiresAt])
}